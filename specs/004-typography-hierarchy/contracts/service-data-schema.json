{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Data Schema",
  "description": "Schema for service items in _data/services.yml",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the service (optional)"
      },
      "name": {
        "type": "string",
        "description": "Service name (required)",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "description": "Short description of the service (required)",
        "minLength": 1
      },
      "url": {
        "type": "string",
        "format": "uri",
        "description": "URL for 'Learn more' link (optional)"
      },
      "logo": {
        "type": "string",
        "description": "Path to service logo image (optional)"
      },
      "icon": {
        "type": "string",
        "description": "Emoji or icon identifier for service (optional, used if logo not available)"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Array of tag strings (optional)"
      },
      "featured": {
        "type": "boolean",
        "description": "Whether service is featured (optional)"
      },
      "status": {
        "type": "string",
        "enum": ["active", "archived", "in-progress", "completed", "deprecated"],
        "description": "Service status (optional)"
      }
    },
    "required": ["name", "description"],
    "additionalProperties": false
  }
}

